{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2020"],
        "allowJs": true,
        "checkJs": true,
        "outDir": "./lib",
        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "*": ["typings/*"]
        },
        "declaration": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*", "tests/src/**/*", "tools/**/*", "typings/**/*"],
    "exclude": ["lib/**/*"]
}
